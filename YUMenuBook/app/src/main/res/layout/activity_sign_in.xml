<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/card_background_color"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_marginBottom="@dimen/margin_medium"
            android:orientation="horizontal"
            android:padding="@dimen/margin_medium">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_medium"
                android:onClick="backCart"
                android:src="@drawable/ic_navigate_before_black_24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="PROFILE"
                android:textColor="@color/color_text"
                android:textSize="@dimen/text_regular_3x"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_signin_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_info_outline_color_24dp"
                android:layout_margin="@dimen/margin_large"/>

            <TextView
                android:id="@+id/tv_signIn_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:text="@string/signin_text"
                android:textSize="@dimen/text_regular_3x"
                android:textColor="@color/color_text"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:layout_below="@id/iv_signin_icon"/>

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:drawableLeft="@drawable/google_logo_small"
                android:text="    Sign in with Google"
                android:textColor="@color/color_text"
                android:padding="@dimen/margin_medium_3"
                android:background="@drawable/btn_sign_in"
                android:layout_below="@id/tv_signIn_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_xlarge"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>





