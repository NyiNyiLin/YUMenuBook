<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    android:layout_marginBottom="24dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"

    >

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_shop_image"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bgColor">

        <TextView
            android:id="@+id/tv_shop_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bgColor"
            android:text="Science Canteen"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_place_black_24dp"
            android:layout_toLeftOf="@id/tv_shop_place"
            android:layout_marginTop="6dp"/>

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_star_half_black_24dp"
            android:layout_below="@id/tv_shop_place"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/margin_medium"
            />

        <TextView
            android:id="@+id/tv_shop_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bgColor"
            android:text="3.5"
            android:textColor="#FFFFFF"
            android:layout_below="@id/tv_shop_place"
            android:layout_toLeftOf="@id/iv_star"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginBottom="@dimen/margin_small"
            />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:background="@color/bgColor"
            android:text="Shop Name"
            android:textSize="@dimen/text_regular_3x"
            android:textColor="@color/white"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_tag"/>
    </RelativeLayout>




</LinearLayout>
</android.support.v7.widget.CardView>