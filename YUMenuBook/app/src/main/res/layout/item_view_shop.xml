<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium">

    <ImageView
        android:id="@+id/iv_shop_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/burger"/>


    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium"
        android:background="@color/cardview_light_background"
        android:text="Shop Name"
        android:textColor="#000"
        android:gravity="left"
        android:layout_toRightOf="@id/iv_shop_image"/>

    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_local_offer_black_24dp"
        android:layout_toRightOf="@id/iv_shop_image"
        android:layout_below="@id/tv_shop_name"
        android:layout_marginRight="@dimen/margin_small"
        android:paddingLeft="@dimen/margin_medium"/>

    <TextView
        android:id="@+id/tv_shop_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:text="Science Canteen"
        android:textColor="#98000000"
        android:gravity="left"
        android:layout_toRightOf="@id/iv_tag"
        android:layout_below="@id/tv_shop_name"/>

    <TextView
        android:id="@+id/tv_shop_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:text="3.5"
        android:textColor="#98000000"
        android:gravity="left"
        android:layout_toRightOf="@id/iv_shop_image"
        android:layout_alignBottom="@id/iv_shop_image"
        android:paddingLeft="@dimen/margin_medium"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_star_half_black_24dp"
        android:layout_alignTop="@id/tv_shop_rating"
        android:layout_toRightOf="@id/tv_shop_rating"
        android:layout_marginLeft="8dp"/>

</RelativeLayout>
</android.support.v7.widget.CardView>