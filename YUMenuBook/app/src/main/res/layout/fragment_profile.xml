<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/card_background_color"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_img_profile"
            android:elevation="13dp" />
        <!--<android.support.v4.widget.CircleImageView
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_marginTop="48dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bg_img_profile"
            android:elevation="16dp"/>-->

        <android.support.v7.widget.CardView
            android:id="@+id/cv_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_xlarge"
            android:layout_marginTop="96dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="96dp"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/margin_large">

                <TextView
                    android:id="@+id/tv_align"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginLeft="72dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name :"
                    style="@style/profile_text_style"
                    android:gravity="right"
                    android:layout_alignRight="@id/tv_align"/>

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/profile_text_style"
                    android:text="Nyi Nyi Lin"
                    android:gravity="left"
                    android:layout_alignLeft="@id/tv_align"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:gravity="right"
                    style="@style/profile_text_style"
                    android:layout_alignRight="@id/tv_align"
                    android:layout_below="@id/tv_profile_name"/>

                <TextView
                    android:id="@+id/tv_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nsuarelin@gmail.com"
                    style="@style/profile_text_style"
                    android:gravity="left"
                    android:layout_alignLeft="@id/tv_align"
                    android:layout_below="@id/tv_profile_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone :"
                    android:gravity="right"
                    style="@style/profile_text_style"
                    android:layout_alignRight="@id/tv_align"
                    android:layout_below="@id/tv_profile_email"/>

                <TextView
                    android:id="@+id/tv_profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    style="@style/profile_text_style"
                    android:gravity="left"
                    android:layout_alignLeft="@id/tv_align"
                    android:layout_below="@id/tv_profile_email"/>

                <ImageView
                    android:id="@+id/iv_profile_phone_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/profile_text_style"
                    android:layout_toRightOf="@id/tv_profile_phone"
                    android:layout_below="@id/tv_profile_email"
                    android:src="@drawable/ic_create_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Major :"
                    android:gravity="right"
                    style="@style/profile_text_style"
                    android:layout_alignRight="@id/tv_align"
                    android:layout_below="@id/tv_profile_phone"/>

                <TextView
                    android:id="@+id/tv_profile_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer Science"
                    style="@style/profile_text_style"
                    android:gravity="left"
                    android:layout_alignLeft="@id/tv_align"
                    android:layout_below="@id/tv_profile_phone"/>

                <ImageView
                    android:id="@+id/iv_profile_major_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/profile_text_style"
                    android:layout_toRightOf="@id/tv_profile_major"
                    android:layout_below="@id/tv_profile_phone"
                    android:src="@drawable/ic_create_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age :"
                    android:gravity="right"
                    style="@style/profile_text_style"
                    android:layout_alignRight="@id/tv_align"
                    android:layout_below="@id/tv_profile_major"/>

                <TextView
                    android:id="@+id/tv_profile_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    style="@style/profile_text_style"
                    android:gravity="left"
                    android:layout_alignLeft="@id/tv_align"
                    android:layout_below="@id/tv_profile_major"/>

                <ImageView
                    android:id="@+id/iv_profile_age_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/profile_text_style"
                    android:layout_toRightOf="@id/tv_profile_age"
                    android:layout_below="@id/tv_profile_major"
                    android:src="@drawable/ic_create_black_24dp"/>

                <Button
                    android:id="@+id/btn_log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign out"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_sign_out"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/margin_large"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>





